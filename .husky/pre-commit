#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit quality checks..."

# Run linting
echo "📝 Checking code style..."
npm run lint:strict

# Run type checking
echo "🔧 Checking types..."
npm run type-check

# Run tests
echo "🧪 Running tests..."
npm run test

echo "✅ All quality checks passed!"
